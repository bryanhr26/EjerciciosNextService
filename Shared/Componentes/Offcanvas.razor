@inject IJSRuntime JSRuntime

<div class="offcanvas offcanvas-end" style="width: 800px;" data-bs-scroll="true" data-bs-keyboard="false" data-bs-backdrop="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel" role="slider">
    <div class="offcanvas-header" style="background-color: rgb(7 27 69); color: white;">
        <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel">Backdrop con scrolling</h5>
        <button @onclick="OnCerrarOffcanvas" type="button" class="btn-close" style="background-color: white; opacity: 90;" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <p>Aqui implementaremos mas opciones</p>
    </div>
</div>

@code {
    [Parameter] public EventCallback CerrarOffcanvas { get; set; }

    private async Task OnCerrarOffcanvas()
    {
        await CerrarOffcanvas.InvokeAsync();
    }
}