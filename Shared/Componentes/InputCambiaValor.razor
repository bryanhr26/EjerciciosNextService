<div class="comprobación" style="margin-right: 20px;">
    <input type="number" @onchange="OnInputChanged" class="form-control" placeholder="Introduce un número" />
</div>

@code {

    [Parameter] public double? Numero2 { get; set; }
    [Parameter] public EventCallback<double?> NumeroInputChanged { get; set; }

    private void OnInputChanged (ChangeEventArgs e)
    {
        //Convertir el valor a 'double'
        if (double.TryParse(e.Value.ToString(), out double convertido))
        {
            Numero2 = convertido;
            NumeroInputChanged.InvokeAsync(Numero2);
            Console.WriteLine($"El número 2 ingresado es: {Numero2}");
        }
        else
        {
            Console.WriteLine($"El número 2 ingresado no es un número válido.");
        }
    }
}